WindowManager:
    EntryWindow:
    ListWindow:
    ViewWindow:

<EntryWindow>:
    name: "entry"

    GridLayout:
        cols:1
        canvas.before:
            Color:
                rgba: 0.5, 0.7, 0.7, 1
            Rectangle:
                pos: self.pos
                size: self.size



        GridLayout:
            cols:2
            size_hint:1.0, 0.1
            Button:
                background_color: 0.5, 0.7, 0.7, 0.7
                size_hint:0.2, 1.0
                text: ""
                on_release: 
                    app.root.current ="list"
                    root.manager.transition.direction = "down"
                Image:
                    source: 'icons/home.png'
                    center_x : self.parent.center_x
                    center_y : self.parent.center_y
                    height: '40sp'
                    size_hint_x: None
                    allow_stretch: True

            Label:
                font_color: 0.5, 0.7, 0.7, 1
                font_size: '25sp'
                size_hint:0.8, 1.0
                id: dateLabel
                text: root.date_time

                

        TextInput:
            id: textfield
            multiline:True
            font_size: '20sp'
            cursor_color: 0.5, 0.7, 0.7, 1
            foreground_color: 0.5, 0.7, 0.7, 1
        
        GridLayout:
            cols:2
            size_hint:1.0, 0.15
            Button:
                background_color: 0.5, 0.7, 0.7, 0.7
                text: ""
                on_release: 
                    textfield.text = ""
                Image:
                    source: 'icons/delete.png'
                    center_x : self.parent.center_x
                    center_y : self.parent.center_y
                    height: '40sp'
                    size_hint_x: None
                    allow_stretch: True
    
            Button:
                font_size: '20sp'
                text: "Submit"
                on_release:
                    root.saveFile(textfield.text)
                background_color: 0.5, 0.7, 0.7, 0.7

<ListWindow>:
    name: "list"

    GridLayout:
        cols:1
        canvas.before:
            Color:
                rgba: 0.5, 0.7, 0.7, 1.0
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            font_size: '30sp'
            text: "Your Dreams"
            size_hint:1.0, 0.1

        ScrollView:
            size: self.size
            do_scroll_x: False
            GridLayout:
                id:dreamsList
                adaptive_height: True
                cols:1
                size_hint:0.9, 0.8

        Button:
            background_color: 0.5, 0.7, 0.7, 0.7
            size_hint:1.0, 0.1
            font_size: '20sp'
            text: "Today's entry"
            on_release:
                app.root.current ="entry"
                root.manager.transition.direction = "up"


<ViewWindow>: 
    name: "view"
    GridLayout:
        cols:1
        canvas.before:
            Color:
                rgba: 0.5, 0.7, 0.7, 1
            Rectangle:
                pos: self.pos
                size: self.size

        GridLayout:
            cols:2
            size_hint:1.0, 0.1
            Button:
                background_color: 0.5, 0.7, 0.7, 0.7
                size_hint:0.2, 1.0
                text: ""
                on_release: 
                    app.root.current ="list"
                    root.manager.transition.direction = "down"
                Image:
                    source: 'icons/home.png'
                    center_x : self.parent.center_x
                    center_y : self.parent.center_y
                    height: '40sp'
                    size_hint_x: None
                    allow_stretch: True

            Label:
                font_color: 0.5, 0.7, 0.7, 1
                font_size: '25sp'
                size_hint:0.8, 1.0
                id: view_date_label
                text: root.view_date

        GridLayout:
            cols:1
            size_hint:1.0, 0.9
            Label:
                font_color: 0.5, 0.7, 0.7, 1
                font_size: '17sp'
                id: view_text_label
                text: root.view_text
                text_size: self.size
                halign: "left"
                valign: "top"
                padding: 10,10,10,10
        
